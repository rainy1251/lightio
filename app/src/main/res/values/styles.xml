<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.Main" parent="Base.AppTheme" >
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yp_blue</item>
        <item name="colorPrimaryDark">@color/yp_blue</item>
        <item name="colorAccent">@color/yp_blue</item>
    </style>

    <style name="tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">10sp</item>
        <!--<item name="android:background">@drawable/tab_menu_bg_selector</item>-->
        <item name="android:drawablePadding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tab_title_color_selector</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="myNavigationDrawerStyle" >
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="StartAppTheme" parent="Base.AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/layout_list_start</item>
    </style>
</resources>