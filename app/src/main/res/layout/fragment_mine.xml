<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:background="@drawable/mine_bg">


            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv_img"
                android:text="请登录"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:background="@color/white"
            android:orientation="vertical">

            <com.aiyaopai.lightio.view.MyItemTextView
                android:id="@+id/tv_edit"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                custom:leftText="修改密码"
                custom:leftTextColor="@color/dark"
                custom:leftTextImage="@mipmap/edit_pwd"
                custom:rightTextImage="@mipmap/back_right"
                custom:leftTextSize="16sp"
                custom:rightText="" />

            <com.aiyaopai.lightio.view.MyItemTextView
                android:id="@+id/tv_clear"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                custom:leftText="清除缓存"
                custom:leftTextColor="@color/dark"
                custom:leftTextImage="@mipmap/clear"
                custom:leftTextSize="16sp"
                custom:rightText="0.00M"
                custom:rightTextColor="@color/dark"
                custom:rightTextImage="@mipmap/back_right"
                custom:rightTextSize="14sp" />

            <com.aiyaopai.lightio.view.MyItemTextView
                android:id="@+id/tv_update"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                custom:leftText="检查更新"
                custom:leftTextColor="@color/dark"
                custom:leftTextImage="@mipmap/updata"
                custom:leftTextSize="16sp"
                custom:rightText="V 1.0.0"
                custom:rightTextColor="@color/dark"
                custom:rightTextImage="@mipmap/back_right"
                custom:rightTextSize="14sp" />

            <com.aiyaopai.lightio.view.MyItemTextView
                android:id="@+id/tv_service"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                custom:leftText="联系客服"
                custom:leftTextColor="@color/dark"
                custom:leftTextImage="@mipmap/kefu"
                custom:leftTextSize="16sp"
                custom:rightTextImage="@mipmap/back_right"
                custom:rightText="" />

            <com.aiyaopai.lightio.view.MyItemTextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                custom:leftText="退出登录"
                custom:leftTextColor="@color/dark"
                custom:leftTextImage="@mipmap/exit"
                custom:leftTextSize="16sp"
                custom:rightTextImage="@mipmap/back_right"
                custom:rightText="" />


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>